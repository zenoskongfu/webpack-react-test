{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "utils/*": [
        "src/utils/*"
      ],
      "src/*": [
        "src/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/**/*.d.ts"
  ],
  "files": [
    "src/index.d.ts"
  ]
}